{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Nex Registry Index",
    "description": "Schema for the nex package registry index",
    "type": "object",
    "required": [
        "version",
        "packages"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "version": {
            "type": "string",
            "description": "Registry schema version"
        },
        "updated": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
        },
        "packages": {
            "type": "array",
            "description": "List of packages in the registry",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "version",
                    "description",
                    "manifest"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^[a-z0-9-]+\\.[a-z0-9-]+$",
                        "description": "Unique package identifier (author.package-name)"
                    },
                    "shortName": {
                        "type": "string",
                        "pattern": "^[a-z0-9-]+$",
                        "description": "Short name for easy install/run (must be unique)"
                    },
                    "name": {
                        "type": "string",
                        "description": "Human-readable package name"
                    },
                    "version": {
                        "type": "string",
                        "pattern": "^\\d+\\.\\d+\\.\\d+",
                        "description": "Current package version"
                    },
                    "description": {
                        "type": "string",
                        "description": "Brief package description"
                    },
                    "keywords": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Search keywords"
                    },
                    "manifest": {
                        "type": "string",
                        "description": "Path to the package manifest file"
                    }
                }
            }
        }
    }
}