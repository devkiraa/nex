{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/nexhq/nex/registry/schema/nex-package.schema.json",
  "title": "Nex Package Configuration",
  "description": "Configuration file (nex.json) that defines how Nex installs and runs your tool",
  "type": "object",
  "required": [
    "id",
    "name",
    "version",
    "type"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+\\.[a-z0-9_-]+$",
      "description": "Unique package identifier (author.package-name)"
    },
    "name": {
      "type": "string",
      "description": "Human-readable package name"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "description": {
      "type": "string",
      "description": "Short description of the package"
    },
    "type": {
      "type": "string",
      "enum": [
        "binary",
        "python",
        "node",
        "script"
      ],
      "description": "Package type determines how it's installed and run"
    },
    "python": {
      "type": "object",
      "description": "Python-specific configuration",
      "properties": {
        "version": {
          "type": "string",
          "description": "Required Python version (e.g., >=3.8)"
        },
        "entry": {
          "type": "string",
          "description": "Main Python file to execute"
        },
        "requirements": {
          "type": "string",
          "description": "Path to requirements.txt"
        }
      }
    },
    "node": {
      "type": "object",
      "description": "Node.js-specific configuration",
      "properties": {
        "version": {
          "type": "string",
          "description": "Required Node.js version"
        },
        "entry": {
          "type": "string",
          "description": "Main JS file or package.json script"
        },
        "package_manager": {
          "type": "string",
          "enum": [
            "npm",
            "yarn",
            "pnpm"
          ],
          "default": "npm"
        }
      }
    },
    "binary": {
      "type": "object",
      "description": "Native binary configuration",
      "properties": {
        "windows": {
          "type": "string",
          "description": "Executable name on Windows"
        },
        "linux": {
          "type": "string",
          "description": "Executable name on Linux"
        },
        "macos": {
          "type": "string",
          "description": "Executable name on macOS"
        }
      }
    },
    "install": {
      "type": "object",
      "description": "Installation configuration",
      "properties": {
        "steps": {
          "type": "array",
          "description": "Ordered list of installation steps",
          "items": {
            "type": "object",
            "required": [
              "action"
            ],
            "properties": {
              "action": {
                "type": "string",
                "enum": [
                  "download",
                  "extract",
                  "pip_install",
                  "npm_install",
                  "run_command"
                ],
                "description": "Installation action to perform"
              },
              "url": {
                "type": "string",
                "description": "URL to download (supports ${version} placeholder)"
              },
              "dest": {
                "type": "string",
                "description": "Destination path"
              },
              "requirements": {
                "type": "string",
                "description": "Requirements file for pip_install"
              },
              "command": {
                "type": "string",
                "description": "Command to run for run_command action"
              }
            }
          }
        }
      }
    },
    "run": {
      "type": "object",
      "description": "How to execute the package",
      "properties": {
        "command": {
          "type": "string",
          "description": "Base command (e.g., python, node, or binary path)"
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Default arguments"
        },
        "passthrough_args": {
          "type": "boolean",
          "default": true,
          "description": "Pass user arguments to the command"
        },
        "env": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Environment variables to set"
        },
        "working_dir": {
          "type": "string",
          "description": "Working directory for execution"
        }
      }
    },
    "commands": {
      "type": "object",
      "description": "Named sub-commands with preset arguments",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "args": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "example": {
            "type": "string"
          }
        }
      }
    },
    "examples": {
      "type": "array",
      "description": "Usage examples",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "command": {
            "type": "string"
          }
        }
      }
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "github": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      }
    },
    "license": {
      "type": "string",
      "description": "SPDX license identifier"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "Source code repository URL"
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}